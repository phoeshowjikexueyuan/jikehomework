    .panel {
        height: 530px;
        overflow: scroll;
    }
    
    th,
    td {
        width: 25%;
    }
    </style>
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
